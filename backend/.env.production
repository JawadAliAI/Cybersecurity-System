# =====================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =====================================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file to version control!

# =====================================================
# DATABASE CONFIGURATION
# =====================================================
# PostgreSQL connection (recommended for production)
DATABASE_URL=postgresql://cybersec_user:YOUR_SECURE_PASSWORD@localhost:5432/cybersecurity_db

# Alternative: SQLite (not recommended for production)
# DATABASE_URL=sqlite:///instance/cybersecurity.db

# =====================================================
# SECURITY KEYS (CRITICAL - GENERATE STRONG RANDOM KEYS!)
# =====================================================
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=GENERATE_RANDOM_STRING_HERE
JWT_SECRET_KEY=GENERATE_RANDOM_STRING_HERE

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=24h

# =====================================================
# ENVIRONMENT CONFIGURATION
# =====================================================
ENVIRONMENT=production
FLASK_ENV=production
LOG_LEVEL=INFO

# =====================================================
# SERVER CONFIGURATION
# =====================================================
HOST=0.0.0.0
PORT=5000

# =====================================================
# FRONTEND CONFIGURATION
# =====================================================
# Update with your actual domain
FRONTEND_URL=https://your-domain.com

# CORS Origins (comma-separated)
CORS_ORIGINS=https://your-domain.com,http://your-domain.com

# =====================================================
# REDIS CONFIGURATION (Optional but Recommended)
# =====================================================
# Uncomment if you install Redis
# REDIS_URL=redis://localhost:6379
# SOCKETIO_MESSAGE_QUEUE_URL=redis://localhost:6379

# =====================================================
# SECURITY CONFIGURATION
# =====================================================
# Bcrypt salt rounds (10-12 recommended)
BCRYPT_SALT_ROUNDS=12

# Maximum login attempts before lockout
MAX_LOGIN_ATTEMPTS=5

# Account lockout duration in minutes
LOCKOUT_DURATION=15

# =====================================================
# RATE LIMITING
# =====================================================
# Maximum requests per window
RATE_LIMIT_MAX=100

# Time window in minutes
RATE_LIMIT_WINDOW=15

# =====================================================
# EMAIL CONFIGURATION (Optional)
# =====================================================
# SMTP settings for sending emails
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
# EMAIL_FROM=noreply@your-domain.com
# EMAIL_USE_TLS=true

# =====================================================
# EXTERNAL SERVICES (Optional)
# =====================================================
# Threat Intelligence APIs
# OPENCTI_API_KEY=your_opencti_key
# MISP_API_KEY=your_misp_key
# ALIENVAULT_API_KEY=your_alienvault_key

# =====================================================
# MONITORING AND LOGGING
# =====================================================
# Sentry DSN for error tracking (optional)
# SENTRY_DSN=your_sentry_dsn

# Log file path
LOG_FILE=/home/cybersec/logs/backend.log

# =====================================================
# PERFORMANCE TUNING
# =====================================================
# Database pool size
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Worker configuration (for Gunicorn)
WORKERS=1
WORKER_CLASS=eventlet
WORKER_TIMEOUT=120

# =====================================================
# FEATURE FLAGS
# =====================================================
# Enable/disable features
ENABLE_WEBSOCKETS=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_METRICS=true

# =====================================================
# BACKUP CONFIGURATION
# =====================================================
# Backup directory
BACKUP_DIR=/home/cybersec/backups

# Backup retention days
BACKUP_RETENTION_DAYS=30
